<Window x:Class="Word.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word"
        mc:Ignorable="d"
        Title="Chat" Height="600" Width="450">
    <Grid>
        <Grid>
            <TextBox x:Name="txtbox_chat" HorizontalAlignment="Center" Height="482" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="406" Background="#FFF3F5F4" IsReadOnly="True" />
            <TextBox x:Name="txtbox_send" HorizontalAlignment="Left" Height="28" Margin="10,507,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="410" KeyUp="txtbox_send_KeyUp"  />

        </Grid>
    </Grid>
</Window>
