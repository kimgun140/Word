<Page x:Class="Word.Join"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Word"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Join">

    <Grid>
        <Grid HorizontalAlignment="Left" Height="364" Margin="168,0,0,0" VerticalAlignment="Center" Width="472" Background="#99F3F3F3"/>
        <TextBox x:Name="txt_join_ID" HorizontalAlignment="Center" Height="34" Margin="0,117,0,0" TextWrapping="Wrap" Text="사용할 ID를 입력해주세요" VerticalAlignment="Top" Width="254" GotFocus="txt_join_ID_GotFocus"/>
        <TextBox x:Name="txt_join_PW" HorizontalAlignment="Center" Height="34" TextWrapping="Wrap" Text="사용할 PW를 입력해주세요" VerticalAlignment="Top" Width="254" Margin="0,174,0,0" GotFocus="txt_join_PW_GotFocus" />
        <Button x:Name="btn_join_haki" Content="가입하기" HorizontalAlignment="Center" Height="66" Margin="0,276,0,0" VerticalAlignment="Top" Width="144" Click="btn_join_haki_Click" Foreground="White" BorderBrush="{x:Null}" Background="#FF80C0E2"/>
    </Grid>
</Page>
